{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "extends": "./stryker.conf.json",
  "mutate": [
    "components/**/*.{ts,tsx}",
    "!components/**/*.test.{ts,tsx}",
    "!components/**/*.spec.{ts,tsx}",
    "!components/**/*.stories.{ts,tsx}"
  ],
  "testFramework": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js",
    "enableFindRelatedTests": true
  },
  "htmlReporter": {
    "fileName": "reports/mutation/components-mutation-report.html"
  },
  "jsonReporter": {
    "fileName": "reports/mutation/components-mutation-report.json"
  },
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 60
  }
}
