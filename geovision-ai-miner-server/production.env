# Production Environment Configuration
# GeoVision AI Miner Server

# Database Configuration
DATABASE_URL=postgresql://geovision_user:${POSTGRES_PASSWORD}@postgres:5432/geovision_prod
POSTGRES_PASSWORD=GeoVision2024SecureDB!
POSTGRES_DB=geovision_prod
POSTGRES_USER=geovision_user

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=GeoVision2024SecureRedis!

# Security Configuration
SECRET_KEY=GeoVision2024SuperSecretKeyForProductionMinimum32Characters!
JWT_SECRET_KEY=GeoVision2024JWTSecretKeyForProductionMinimum32Chars!
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=https://geo-miner.com,https://www.geo-miner.com
CORS_ALLOW_CREDENTIALS=true

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Frontend Configuration
REACT_APP_API_URL=https://geo-miner.com/api
REACT_APP_WEBSOCKET_URL=wss://geo-miner.com/ws

# Monitoring Configuration
GRAFANA_PASSWORD=GeoVision2024Grafana!
PROMETHEUS_RETENTION_DAYS=30

# File Storage Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.las,.laz,.tif,.tiff,.shp,.dbf,.prj,.shx,.qgz,.gpkg,.csv,.xlsx,.xls

# AI Model Configuration
AI_MODEL_PATH=/app/models
AI_MODEL_CACHE_SIZE=2GB
AI_INFERENCE_TIMEOUT=300

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Backup Configuration
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CA_PATH=/etc/nginx/ssl/ca.pem

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@geo-miner.com

# Monitoring and Alerting
ALERT_EMAIL=admin@geo-miner.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50

# Logging Configuration
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# API Versioning
API_VERSION=v1
API_PREFIX=/api/v1

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=60

# File Processing Configuration
MAX_CONCURRENT_UPLOADS=10
UPLOAD_CHUNK_SIZE=8MB
PROCESSING_TIMEOUT=300

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=1000

# Real-time Collaboration
COLLABORATION_ENABLED=true
COLLABORATION_MAX_USERS_PER_ROOM=50
COLLABORATION_SESSION_TIMEOUT=3600

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=GeoVision2024BackupEncryptionKey!

# Disaster Recovery
DR_ENABLED=true
DR_REPLICATION_LAG_THRESHOLD=300
DR_FAILOVER_TIMEOUT=60

# Load Balancing
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_PATH=/health

# Auto Scaling
AUTO_SCALE_ENABLED=true
AUTO_SCALE_MIN_INSTANCES=2
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
COST_ALERT_THRESHOLD=1000
COST_MONTHLY_BUDGET=5000

# Compliance and Security
GDPR_COMPLIANCE_ENABLED=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
AUDIT_LOGGING_ENABLED=true

# Performance Tuning
QUERY_CACHE_ENABLED=true
QUERY_CACHE_SIZE=100MB
QUERY_TIMEOUT=30
CONNECTION_POOLING_ENABLED=true

# Development and Testing
TESTING_ENABLED=false
MOCK_EXTERNAL_SERVICES=false
DEBUG_MODE=false
PROFILING_ENABLED=false 