# ===========================================
# GeoVision AI Miner Backend Configuration
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false

# API Configuration
PROJECT_NAME="GeoVision AI Miner"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://localhost:3000,https://localhost:8000"

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=geovision
POSTGRES_PASSWORD=geovision_password
POSTGRES_DB=geovision_ai_miner
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=geovision-data

# Monitoring & Logging
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=8001
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI/ML Configuration
AI_MODEL_PATH=./models
MAX_FILE_SIZE=104857600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Initial Superuser
FIRST_SUPERUSER=admin@geo-miner.com
FIRST_SUPERUSER_PASSWORD=changeme
